<h1>Editing Book</h1>
 <% if @book.errors.any? %>
    <ul>
    	<%= @book.errors.count %><span>error</span>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<!-- form_for部分 -->
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br><br>
    <%= f.submit 'Update Book' %>
<% end %>
<br>
<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>